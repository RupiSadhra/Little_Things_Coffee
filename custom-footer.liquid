<footer>
  <div class="footer-container">
    <div class="footer-left">
      <section>
        <h5>Store Location</h5>
        <p>Glenfield Mall Shop 502C</p>
        <p>Level 5/385 Glenfield Road Glenfield</p>
        <p>Auckland 0629</p>
        
       <br>
        <p><strong>Phone</strong>: 09 600 3210</p>
      <p><strong>Email</strong>: info@littlethingscoffee.co.nz</p>
        
      </section>
     
      <section>
         <h5>Quick Links</h5>
           <ul class="no-bullets site-footer__linklist">
              {% for link in linklists[section.settings.footer_link_list].links %}

                  {% comment %}
                    Create a second column
                  {% endcomment %}
                  {% if extra_footer_linklist_column and forloop.index == footer_linklist_split %}
                      </ul>
                    </div>
                    <div class="grid__item {{ footer_column_width }}">
                      <ul class="no-bullets site-footer__linklist">
                  {% endif %}

                        <li><a href="{{ link.url }}" class="footer-links">{{ link.title }}</a></li></h5>

              {% endfor %}
            </ul>
      </section>
      
      <section>
           <h5>Payment Methods</h5>
         {%- if section.settings.show_payment_icons -%}
            {%- unless shop.enabled_payment_types == empty -%}
              <span class="visually-hidden">{{ 'general.payment.method' | t }}</span>
              <ul class="inline-list payment-icons">
                {%- for type in shop.enabled_payment_types -%}
                  <li>
                    {{ type | payment_type_svg_tag: class: 'icon' }}
                  </li>
                {%- endfor -%}
              </ul>
            {%- endunless -%}
          {%- endif -%}
      </section>
    </div>
    
    <div class="footer-right">
